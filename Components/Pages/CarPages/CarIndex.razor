@page "/cars"
@using Microsoft.AspNetCore.Components.QuickGrid
@using Fribergs_Alpha.Data
@inject ICar carRepository
@using Fribergs_Alpha.Models

<PageTitle>Index</PageTitle>

<h1>Index</h1>

<p>
    <a href="cars/create">Create New</a>
</p>

<QuickGrid Class="table" Items="Cars">
    <PropertyColumn Property="car => car.Brand" />
    <PropertyColumn Property="car => car.CarModel" />
    <PropertyColumn Property="car => car.Year" />
    <PropertyColumn Property="car => car.Color" />
    <PropertyColumn Property="car => car.Description" />
    <PropertyColumn Property="car => car.PricePerDay" />
    <PropertyColumn Property="car => car.CarPicUrl" />

    <TemplateColumn Context="car">
        <a href="@($"cars/edit?carid={car.CarId}")">Edit</a> |
        <a href="@($"cars/details?carid={car.CarId}")">Details</a> |
        <a href="@($"cars/delete?carid={car.CarId}")">Delete</a>
    </TemplateColumn>
</QuickGrid>

@code{
    IQueryable<Car>? Cars;

    protected void OnIntialized()
    {
        Cars = carRepository.GetAllCars().AsQueryable();
    }

}
