@page "/cars"
@using Microsoft.AspNetCore.Components.QuickGrid
@using Microsoft.EntityFrameworkCore
@using Fribergs_Alpha.Data
@inject ICar carRepository
@inject ICarCategory carCategoryRepository
@using Fribergs_Alpha.Models
@rendermode @(new InteractiveServerRenderMode(prerender: false))


<PageTitle>Index</PageTitle>

<h1>Index</h1>

<p>
    <a href="cars/create">Create New</a>
</p>

<QuickGrid Class="table" Items="Cars"
           Sortable="true"
           @ref="grid">
    <PropertyColumn Property="car => car.Category.Category" Title="Category" Sortable="true" />
    <PropertyColumn Property="car => car.Brand" Title="Brand" Sortable="true" />
    <PropertyColumn Property="car => car.CarModel" Title="Model" Sortable="true"/>
    <PropertyColumn Property="car => car.Year" Title="Year" Sortable="true" />
    <PropertyColumn Property="car => car.Color" Title="Color" Sortable="true" />
    <PropertyColumn Property="car => car.Description" Title="Description" />
    <PropertyColumn Property="car => car.PricePerDay" Title="SEK/Day" Sortable="true" />
    
    <TemplateColumn Context="car" Title="Picture">
        <img src="@car.CarPicUrl" alt="Picture of @car.CarModel" class="img-thumbnail" />
    </TemplateColumn>

    <TemplateColumn Context="car" Title="Handle">
        <a href="@($"cars/edit?carid={car.CarId}")">Edit</a> |
        <a href="@($"cars/details?carid={car.CarId}")">Details</a> |
        <a href="@($"cars/delete?carid={car.CarId}")">Delete</a>
    </TemplateColumn>
</QuickGrid>

@code{
    IQueryable<Car>? Cars;
    QuickGrid<Car>? grid;

    protected override void OnInitialized()
    {
        Cars = carRepository.GetAllCars().OrderBy(c => c.Category.Category);
    }
}
